<?xml version="1.0" encoding="UTF-8"?>
<!--
Setting file will auto parseble and updateble
each module (submodule) have tab
each node must have meta attribute or meta node
-->


<root>
    <module name="core" meta="Core setting for system">
        <module name="social">
            <!--Social integration-->
            <facebook meta="Intigrate facebook application with the system">
                <appID></appID>
                <appKey></appKey>
            </facebook>
            
            <facebook meta="Intigrate twitter application with the system">
                <appID></appID>
                <appKey></appKey>
            </facebook>
            
            <google meta="Intigrate google plus group with the system">
                <appID></appID>
                <appKey></appKey>
            </google>
        </module>
    </module>
    
    <module name="question">
        <commentEnable>true</commentEnable>
        <votingEnable>true</votingEnable>
        <flaggingEnable>true</flaggingEnable>
        <itemPerPage>10</itemPerPage>
        <categorizingScheme toggle='tag'> <!-- toggle value tag/category Now only tag is available-->
            <tag>
                <max>5</max> <!-- Maximum tag can be used -->
            </tag>
        </categorizingScheme>
    </module>
    
    <module name="answer">
        <commentEnable>true</commentEnable>
        <votingEnable>true</votingEnable>
        <flaggingEnable>true</flaggingEnable>
        <itemPerPage>10</itemPerPage>
    </module>
    
    <module name="comment">
        <votingEnable>true</votingEnable>
        <flaggingEnable>true</flaggingEnable>
        <itemPerPage>5</itemPerPage>
    </module>
    
    <module name="notification">
        <target module="question">
            <actor>true</actor>
            <participant>true</participant>
            <owner>true</owner>
        </target>
    </module>
    
    <!--
    Notiification used to notify user if some action is taken on some object
    So it is good to atatch notification message attached to either object or objectController AKA action
    -->
    <module name="notification">
        <target module="question">
            <action name="edit">
                A comment has been added to %question
            </action>
            <action name="addComment">
                %question has been modified
            </action>
        </module>
    </module>
    
    <!--
    - Reputation will be on content base not directly to user
    - Rputation holds information about reputation for different action in system
    - Reputation will bee given or taken for action
    - There is two elements  of each action actor and target
    - Actor is User who is doing the action
    - Target is also User. It is the owner of the content
    - @TODO Self is special case to where target and actor same
    - Reputation could be  any negetive or positive ineteger,zero or NULL for invalid case
    - NULL will be treated as 0
    -->
    <module name="reputation">
        <target module="question">
            <action name="create">
                <actor></actor>
                <target></target>
            </action>
            <action name="downVote">
                <actor>-1</actor>
                <target>-2</target>
            </action>
            <action name="upVote">
                <actor>0</actor>
                <target>3</target>
            </action>
        </target>
    
        <target module="answer">
            <action name="create">
                <actor></actor>
                <target></target>
            </action>
            <action name="downVote">
                <actor>-1</actor>
                <target>-2</target>
            </action>
            <action name="upVote">
                <actor>0</actor>
                <target>3</target>
            </action>
            <action name="selectAnswer">
                <actor>3</actor>
                <target>10</target>
            </action>
        </target>
    </module>

        
</root>
