<?xml-stylesheet type="text/xsl" href="setting.xsl"?>
<!--
Setting file will auto parseble and updateble
each module (submodule) have tab
each node must have meta attribute or meta node

First level is module
Each module could have seperate setting file to include
-->


<root>
    <core type="module" meta="Core setting for system">
        <social type="tab">
            <!--Social integration-->
            <facebook type="" meta="Intigrate facebook application with the system">
                <appID type="int">537717556265847</appID>
                <appKey type="string">73a48848a53a948e6f78fd96448406e1</appKey>
            </facebook>
            
            <facebook meta="Intigrate twitter application with the system">
                <appID></appID>
                <appKey></appKey>
            </facebook>
            
            <google meta="Intigrate google plus group with the system">
                <appID></appID>
                <appKey></appKey>
            </google>
        </social>
    </core>
    
    <file type="module">
        <movie>
            <permitedExtension></permitedExtension>
            <location></location>
            <maxSize></maxSize>
            <permitedResolution></permitedResolution>
        </movie>
    </file>
    
    <question type="module">
        <commentEnable heading="Comment Enable" meta="Enable or disable comment" type="toggle">1</commentEnable>
        <votingEnable heading="Voting Enable" meta="Enable or disable voting" type="toggle">1</votingEnable>
        <flagEnable  heading="Flagging Enable" meta="Enable or disable Flagging" type="toggle"></flagEnable>
        <privateConversation meta="Toggle" type="toggle">1</privateConversation>
        
        <itemPerPage>10</itemPerPage>
        <categorizingScheme toggle='tag'> <!-- toggle value tag/category Now only tag is available-->
            <tag>
                <max>5</max> <!-- Maximum tag can be used -->
                <min>1</min>
            </tag>
        </categorizingScheme>
        <format>tagged</format> <!-- Threaded or tagged -->
        
        <allowGuestQuestion meta="Guest can ask question or not">0</allowGuestQuestion>
    </question>   
     
    <answer type="module">
        <commentEnable type="toggle">true</commentEnable>
        <votingEnable type="toggle"></votingEnable>
        <flaggingEnable type="toggle"></flaggingEnable>
        <itemPerPage type="j">10</itemPerPage>
    </answer>
    
    <comment type="module">
        <votingEnable>true</votingEnable>
        <flaggingEnable>true</flaggingEnable>
        <itemPerPage>5</itemPerPage>
    </comment>
    
    <notification type="module">
        <target module="question">
            <actor>true</actor>
            <participant>true</participant>
            <owner>true</owner>
        </target>
    </notification>
    
    <!--
